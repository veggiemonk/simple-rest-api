doctype html
html
  head
    title= title
    link(rel='stylesheet', href='../../stylesheets/style.css')
  body

    h1 Hire New Movie:

    form.navbar-form
      a(href="/rentals")
        button(type="button",class="btn btn-default")        
          span(class="glyphicon glyphicon-arrow-left")  Rentals
        
    form.navbar-form(method="POST" , action="/rentals")
      div.row
        div.col-lg-3
          div.input-group
            span.input-group-addon Movie:
            input#name.form-control(type="number" , name="movie", placeholder="Movie ID")
        div.col-lg-3
          div.input-group
            span.input-group-addon User:
            input#user.form-control(type="number", name="user", placeholder="User ID")
        div.col-lg-3
          div.input-group
            span.input-group-addon Price:
            input#price.form-control(type="number", name="price", placeholder="Cost")
        div.col-lg-3
          div.input-group
            button(type="submit",class="btn btn-default")
              span(class="glyphicon glyphicon-save")  Save


